<div class = "container">

  <h1>ジャンル一覧・追加</h1>

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= render 'layouts/errors', resource: @genre %>
      <div class = "form-group col-auto">
        <label for = "genre_name" class="col-sm-2 col-form-label">ジャンル名</label>
          <%= f.text_field :name, class: 'form-control genre_name' %>
      </div>
      <div class = "form-group">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    <% end %>


<h4>ジャンル</h4>
<% @genres.each do |genre| %>
  <div>
    <%= genre.name %>
    <%= link_to "編集", edit_admin_genre_path(genre) %>
    <%= link_to "削除", admin_genre_path(genre), method: :delete %>
  </div>
<% end %>