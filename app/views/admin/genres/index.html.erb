<div class = "container">
  <div class = "row">
    <div class = "col-md-8 mx-auto">
    <h1>ジャンル一覧・追加</h1>

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= render 'layouts/errors', resource: @genre %>
      <div class = "form-group">
        <label for = "genre_name" class="form-label">ジャンル名</label>
        <%= f.text_field :name, class: 'form-control genre_name' %>
      </div>
      <div class = "form-group my-3">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-md-8 mx-auto">
    <div class = "table-responsive-md">
      <table class = "table text-nowrap">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-outline-success btn-sm" %></td>
            <td><%= link_to "削除", admin_genre_path(genre), class: "btn btn-outline-danger btn-sm", method: :delete %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>