<div class = "container">
<h3>ジャンル編集</h3>

<%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
  <%= render 'layouts/errors', resource: @genre %>
  <div class = "form-group col-auto">
    <label for = "genre_name" class="col-sm-2 col-form-label">ジャンル名</label>
    <%= f.text_field :name, class: 'form-control genre_name' %>
  </div>
  <div class = "form-group">
    <%= f.submit '編集', class: 'btn btn-success' %>
  </div>
<% end %>
</div>
