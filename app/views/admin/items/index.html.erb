<div class = "container">
  <div class = "row">
    <div class = "col-md-8 mx-auto">
    <h1>商品一覧</h1>
      <div class = "table-responsive-md">
      <%= link_to '商品登録', new_admin_item_path %>
        <table class = "table text-nowrap table-bordered">
          <thead class = "table-dark">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items. each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.sale_status ? '販売中' : '販売停止中' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @items, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>