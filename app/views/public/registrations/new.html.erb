<div class = "container">

<h2>新規会員登録</h2>

<%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>

  <div class="field">
    <!--autofocusはページ遷移後にautofocus属性を指定している箇所にカーソルが移動し入力状態にするもの-->
    <%= f.label :last_name, "(名前)", class: "customer_name" %> <%= f.text_field :last_name, autofocus: true, :placeholder => "難波" %>
    <%= f.label :first_name, "(姓)", class: "customer_name" %> <%= f.text_field :first_name, :placeholder =>"太郎" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "(セイ)", class: "customer_name" %> <%= f.text_field :last_name_kana, :placeholder => "ナンバ" %>
    <%= f.label :first_name_kana, "(メイ)", class: "customer_name" %> <%= f.text_field :first_name_kana, :placeholder =>"タロウ" %>
  </div>

  <div class="field">
    <!--autocompleteは入力フォームで自動補完を行ってくれるもの。何と結びつけるかも指定できる。今回ならemail-->
    <%= f.label :email, "メールアドレス" %> <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %> <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %> <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号" %> <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>