<div class = "container">

  <h3>配送先一覧/登録</h3>
  <div class = "row">
    <%= render 'form',delivery: @delivery, url: deliveries_path ,submit: '新規登録' %>
  </div>
  <div class = "row">
    <div class = "col-md-8 mx-auto table-responsive-sm">
      <table class = "table text-nowrap table-bordered">
        <thead>
          <tr class = "table-dark">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @deliveries.each do |delivery| %>
          <tr>
            <td><%= delivery.postcode %></td>
            <td><%= delivery.address %></td>
            <td><%= delivery.name %></td>
            <td class = "text-center">
              <%= link_to "編集", edit_delivery_path(delivery), class: "btn btn-success" %>
              <%= link_to "削除", delivery_path(delivery), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>