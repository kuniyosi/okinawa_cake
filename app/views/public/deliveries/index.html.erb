<div class = "container">

  <h1>配送先一覧/登録</h1>

    <%= form_with model: @delivery_new, url: deliveries_path do |f| %>
      <div class = "form-group col-auto">
        <label for = "delivery_postcode" class="col-sm-2 col-form-label">郵便番号</label>
          <!--text_numberはデータ型がintegerでないとうまく保存できない。-->
          <%= f.text_field :postcode, class: 'form-control delivery_postcode' %>
      </div>
      <div class = "form-group col-auto">
        <label for = "delivery_address" class="col-sm-2 col-form-label">住所</label>
          <%= f.text_field :address, class: 'form-control delivery_address' %>
      </div>
      <div class = "form-group col-auto">
        <label for = "delivery_name" class="col-sm-2 col-form-label">宛名</label>
          <%= f.text_field :name, class: 'form-control delivery_name' %>
      </div>
      <div class = "form-group">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    <% end %>

<% @deliveries.each do |delivery| %>
  <div>
    <%= delivery.postcode %>
    <%= delivery.address %>
    <%= delivery.name %>
    <%= link_to "編集", edit_delivery_path(delivery) %>
    <%= link_to "削除", delivery_path(delivery), method: :delete %>
  </div>
<% end %>