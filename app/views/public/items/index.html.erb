<div class = "container">
  <h1>商品一覧</h1>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>価格</th>
      </tr>
    </thead>
    <tbody>
    <% @items. each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td>¥<%= item.add_tax_price.to_s(:delimited) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>